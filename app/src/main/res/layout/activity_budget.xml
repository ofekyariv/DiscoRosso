<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E2D7"
    tools:context=".BudgetActivity">


    <TextView
        android:id="@+id/tvDiscoRosso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCO ROSSO"
        android:textColor="#F8A4C0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="35sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:layout_below="@id/tvDiscoRosso"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/tvbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter your budget"
        android:textSize="20sp"
        android:layout_below="@id/imglogo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/etbudget"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvbudget"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:hint="Budget"
        android:textColor="@android:color/black"
        android:inputType="number"
        />


    <TextView
        android:id="@+id/tvlastbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your last budget"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@id/etbudget"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/txtlastbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100$"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvlastbudget"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/btnGo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtlastbudget"
        android:layout_marginTop="40dp"
        android:background="@android:color/black"
        android:text="Go Shopping"
        android:textColor="#FFFFFF"
        />



</RelativeLayout>